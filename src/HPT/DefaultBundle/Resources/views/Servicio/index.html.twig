{% extends 'HPTDefaultBundle::layout.html.twig' %}

{% block title 'Salvador Allende' %}

{% block menu_items %}
    <li><a href="{{ path('admin_usuario_listar') }}">Usuarios</a></li>
    <li><a href="{{ path('sala') }}">Salas</a></li>
    <li class="active"><a href="{{ path('servicio') }}">Servicios</a></li>
    <li><a href="{{ path('noticias') }}">Noticias</a></li>
    <li><a href="{{ path('trabajador') }}">Trabajadores</a></li>
{% endblock %}

{% block menu_usuario %}
    <li>{% render controller('UsuarioBundle:Default:cajaLogin')%}</li>
{% endblock %}

{% block contenido%}

<div class="container" style="margin-bottom: 20px;">
    <div class="row">
        <div class="col-lg-12">
            <h1>Servicios</h1>

            <table class="table table-striped">
                <tr>
                    {#<th>Id</th>#}
                    <th>Codigo</th>
                    <th>Categor&iacute;a</th>
                    <th>Nombre</th>
                    <th>Descripci&oacute;n</th>
                    <th>Unidad</th>
                    <th>Precio</th>
                    <th>Trabajador</th>
                    <th>Acci&oacute;n</th>
                </tr>
                {% for entity in entities %}
                    <tr>
                        {#<td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                        {#<td><a href="{{ path('sala_show',{'id':entity.id}) }}">{{ entity.nombre }}</a> </td>#}
                        <td>{{ entity.codigo }}</td>
                        <td>{{ entity.categoria }}</td>
                        <td>{{ entity.nombreServ }}</td>
                        <td>{{ entity.descripcion }}</td>
                        <td>{{ entity.unidad }}</td>
                        <td>{{ entity.precio }}</td>
                        <td>
                            <table>
                                {% for trabajador in entity.trabajador %}
                                    <tr><td>{{ trabajador }}</td></tr>
                                {% endfor %}
                            </table>
                        </td>
                        <td>
                            <a href="{{ path('servicio_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                            <a href="{{ path('servicio_delete', { 'id': entity.id }) }}" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            <a href="{{ path('servicio_new') }}" class="btn btn-default" >Crear Servicio</a>

        </div>

    </div>
</div>

{% endblock %}

{% block contactanos_footer %}
{% endblock %}

