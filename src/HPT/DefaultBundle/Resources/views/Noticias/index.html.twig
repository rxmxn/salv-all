{% extends 'HPTDefaultBundle::layout.html.twig' %}

{% block menu_items %}
    <li><a href="{{ path('admin_usuario_listar') }}">Usuarios</a></li>
    <li><a href="{{ path('sala') }}">Salas</a></li>
    <li><a href="{{ path('servicio') }}">Servicios</a></li>
    <li class="active"><a href="{{ path('noticias') }}">Noticias</a></li>
    <li><a href="{{ path('trabajador') }}">Trabajadores</a></li>
{% endblock %}

    {% block menu_usuario %}
        <li>{% render controller('UsuarioBundle:Default:cajaLogin')%}</li>
    {% endblock %}


    {% block contenido%}

        <div class="container" style="margin-bottom: 20px;">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Noticias</h1>

                    <table class="table table-striped">
                        <tr>
                            {#<th>Id</th>#}
                            <th>T&iacute;tulo</th>
                            <th>Autor</th>
                            <th>Fecha de Publicaci&oacute;n</th>
                            <th>Acci&oacute;n</th>
                        </tr>
                        {% for entity in entities %}
                            <tr>
                                {#<td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                                {#<td><a href="{{ path('sala_show',{'id':entity.id}) }}">{{ entity.nombre }}</a> </td>#}
                                <td>{{ entity.titular }}</td>
                                <td>{{ entity.nombreAutor }}</td>
                                <td>{% if entity.fechaArticulo %}{{ entity.fechaArticulo|date('Y-m-d') }}{% endif %}</td>
                                <td>
                                    <a href="{{ path('noticias_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                    <a href="{{ path('noticias_delete', { 'id': entity.id }) }}" class="btn btn-danger">Borrar</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>

                    <a href="{{ path('noticias_new') }}" class="btn btn-default ">Publicar Noticia</a>

                </div>

            </div>
        </div>


    {% endblock %}


