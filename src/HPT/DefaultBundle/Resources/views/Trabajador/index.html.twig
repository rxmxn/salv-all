{% extends 'HPTDefaultBundle::layout.html.twig' %}

{% block menu_items %}
    <li><a href="{{ path('admin_usuario_listar') }}">Usuarios</a></li>
    <li><a href="{{ path('sala') }}">Salas</a></li>
    <li><a href="{{ path('servicio') }}">Servicios</a></li>
    <li><a href="{{ path('noticias') }}">Noticias</a></li>
    <li class="active"><a href="{{ path('trabajador') }}">Trabajadores</a></li>
{% endblock %}

{% block menu_usuario %}
    <li>{% render controller('UsuarioBundle:Default:cajaLogin')%}</li>
{% endblock %}

{% block contenido%}

    <div class="container" style="margin-bottom: 20px;">

        {{ form_start(form) }}

        <div class="blog-content-right" style="padding-top: 15px;">
            <div class="b-search" style="width: 75%">
                <div class="control-group" style="width: 15em;">
        <span>
        <div class="form-error">{{ form_errors(form) }}</div>
        <div class="form-error">{{ form_errors(form.nombre) }}</div>
        <div class="input-medium ">{{ form_widget(form.nombre, { 'attr': {
            'accesskey' : 'n',
            'tabindex' : 1,
            'placeholder' : "Trabajador . . ."
            }}) }}</div>
        </span>
                </div>

                <div class="control-group">
                    <div class="controls">
                        <input type="submit"  value="" />
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}

        <div class="row">
            <div class="clearfix" style="height: 100%;width: 80%">
            <div class="col-lg-12">
                <h1>Trabajadores</h1>

                <table class="table table-striped">
                    <tr>
                        {#<th>Id</th>#}
                        <th>Nombre</th>
                        <th>Codigo</th>
                        <th>Categoria</th>
                        <th>Tipo de Categoria</th>
                        <th>Sala</th>
                        <th>Actions</th>

                    </tr>
                    {% for entity in entities %}
                        <tr>
                            {#<td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                            {#<td><a href="{{ path('trabajador_show',{'id':entity.id}) }}">{{ entity.nombre }}</a> </td>#}
                            <td>{{ entity.nombre }}</td>
                            <td>{{ entity.codigo }}</td>
                            <td>{{ entity.categoria }}</td>
                            <td>{{ entity.tipoDeCategoria }}</td>
                            <td>{{ entity.sala }}</td>
                            <td>
                                <a href="{{ path('trabajador_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                                <a href="{{ path('trabajador_delete', { 'id': entity.id }) }}" class="btn btn-danger">Borrar</a>
                            </td>
                        </tr>
                    {% endfor %}
                </table>

                <a href="{{ path('trabajador_new') }}" class="btn btn-default">Crear Trabajador</a>

            </div>

        </div>
            </div>
    </div>
    {% endblock %}

{% block contactanos_footer %}
{% endblock %}