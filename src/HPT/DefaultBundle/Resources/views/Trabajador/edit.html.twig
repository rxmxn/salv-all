        <label class="control-label">{{ form_label(edit_form.sala) }}</label>
        <div class="controls">{{ form_widget(edit_form.sala, { 'attr': {
            'accesskey' : 'n',
            'tabindex' : 1,
            }}) }}
        </div>
            </span>
                        </div>

                        <div class="control-group">
                            <div class="controls">

