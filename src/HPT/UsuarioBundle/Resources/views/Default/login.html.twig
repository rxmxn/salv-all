{# src/HPT/UsuarioBunle/Resources/views/Default/login.html.twig #}
{% extends "HPTDefaultBundle::layout.html.twig" %}

{% block title 'Salvador Allende' %}

    {% block menu_items %}
        <li><a href="{{ path('hpt_default_homepage') }}">Inicio</a></li>
        <li><a href="{{ path('hpt_quienes_somos') }}">Qui&eacute;nes Somos</a></li>
        <li><a href="{{ path('hpt_servicios') }}">Servicios</a></li>
        <li><a href="{{ path('hpt_noticias') }}">Noticias</a></li>
        <li><a href="{{ path('hpt_contactanos') }}">Cont&aacute;ctanos</a></li>
    {% endblock %}

    {% block menu_usuario %}
        <li class="active">{% render controller('UsuarioBundle:Default:cajaLogin')%}</li>
    {% endblock %}

    {% block contenido %}
        {% if error %}
            <div class="alert-danger"><h2 style="margin-left: 30%;">{{ error.message }}</h2></div>
        {% endif %}
        <form action={% block path_login %}"{{ path('usuario_login_check') }}"{% endblock %} method="post"
              style="margin-left: 30%; margin-bottom: 10px; margin-top: 10px;">
            <div class="form-group">
                <label for="username">{% block username_text %}E-mail:{% endblock %}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}"
                       class="form-control" placeholder="Nombre de Usuario" style="width: auto"/>
            </div>
            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña"
                       style="width: auto;"/>
            </div>
            <div>
                <input type="checkbox" id="no_cerrar" name="_remember_me" checked />
                <label for="no_cerrar">No cerrar sesión</label>
            </div>
            <input type="submit" name="login" value="Acceder" class="btn btn-default" />
        </form>
        {% block registrar_usuario %}
            <div style="margin-left: 30%; margin-bottom: 10px; margin-top: 10px;">
                <span style="font-style: italic; font-size: 10pt;">
                    En caso de no tener una cuenta de usuario:
                    <a href="{{ path('usuario_registro') }}"><h3>Registrarse!</h3></a>
                </span>

            </div>
        {% endblock %}
    {% endblock %}

    {% block aside %}{% endblock %}