{% extends "BackendBundle::backend.html.twig" %}

{% block menu_items %}
    <li><a href="{{ path('backend_usuario_listar') }}">Usuarios</a></li>
    <li><a href="{{ path('backend_admin_listar') }}">Admins</a></li>
    <li><a href="{{ path('backend_sala') }}">Salas</a></li>
    <li class="active"><a href="{{ path('backend_servicio') }}">Servicios</a></li>
    <li><a href="{{ path('backend_noticias') }}">Noticias</a></li>
    <li><a href="{{ path('backend_trabajador') }}">Trabajadores</a></li>
{% endblock %}

{% block contenido%}

<div class="container" style="margin-bottom: 20px;">
    <div class="row">
        <div class="col-lg-12">
            <h1>Servicios</h1>

            <table class="table table-striped">
                <tr>
                    {#<th>Id</th>#}
                    <th>Codigo</th>
                    <th>Categor&iacute;a</th>
                    <th>Nombre</th>
                    <th>Descripci&oacute;n</th>
                    <th>Unidad</th>
                    <th>Precio</th>
                    <th>Trabajador</th>
                    <th>Acci&oacute;n</th>
                </tr>
                {% for entity in entities %}
                    <tr>
                        {#<td><a href="{{ path('sala_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>#}
                        {#<td><a href="{{ path('sala_show',{'id':entity.id}) }}">{{ entity.nombre }}</a> </td>#}
                        <td>{{ entity.codigo }}</td>
                        <td>{{ entity.categoria }}</td>
                        <td>{{ entity.nombreServ }}</td>
                        <td>{{ entity.descripcion }}</td>
                        <td>{{ entity.unidad }}</td>
                        <td>{{ entity.precio }}</td>
                        <td>
                            <table>
                                {% for trabajador in entity.trabajador %}
                                    <tr><td>{{ trabajador }}</td></tr>
                                {% endfor %}
                            </table>
                        </td>
                        <td>
                            <a href="{{ path('backend_servicio_edit', { 'id': entity.id }) }}" class="btn btn-primary">Editar</a>
                            <a href="{{ path('backend_servicio_delete', { 'id': entity.id }) }}" class="btn btn-danger">Borrar</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>

            <a href="{{ path('backend_servicio_new') }}" class="btn btn-default">Crear Servicio</a>

        </div>

    </div>
</div>
{% endblock %}

